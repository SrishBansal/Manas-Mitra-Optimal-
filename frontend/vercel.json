{
  "version": 2,
  "builds": [
    { "src": "package.json", "use": "@vercel/next" },
    { "src": "api/main.py", "use": "@vercel/python" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/chat/$1" },
    { "src": "/(.*)", "dest": "/$1" }
  ],
  "env": {
    "PYTHONPATH": "/var/task/api:/var/task"
  }
}
